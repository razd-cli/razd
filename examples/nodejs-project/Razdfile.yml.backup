version: '3'
tasks:

  default:
    desc: Set up and start Node.js project
    cmds:
    - mise install
    - npm install
    - npm run dev
    internal: false

  install:
    desc: Install dependencies
    cmds:
    - mise install
    - npm install
    internal: false

  build:
    desc: Build project
    cmds:
    - npm run build
    internal: false

  

  test:
    desc: Run tests
    cmds:
    - npm test
    internal: false

  dev:
    desc: Start development server
    cmds:
    - npm run dev
    internal: false
